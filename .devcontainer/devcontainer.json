{
	"name": "Go & Ollama",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go"
			]
		}
	},
	"forwardPorts": [11434],
	"postCreateCommand": "nohup ollama serve > /dev/null 2>&1 & sleep 10 && ollama pull phi3",
	"postStartCommand": "nohup ollama serve > /dev/null 2>&1 &",
	"remoteUser": "vscode"
}
